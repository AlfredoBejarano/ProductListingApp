<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/app_navigation"
            app:startDestination="@+id/splashFragment">
    <fragment android:id="@+id/loginFragment"
              android:name="me.alfredobejarano.productlisting.LoginFragment"
              android:label="fragment_login"
              tools:layout="@layout/fragment_login">

        <action android:id="@+id/action_loginFragment_to_postsFragment"
                app:destination="@id/postsFragment"/>

    </fragment>
    <fragment android:id="@+id/postsFragment"
              android:name="me.alfredobejarano.productlisting.PostsFragment"
              android:label="PostsFragment"/>

    <fragment android:id="@+id/splashFragment" android:name="me.alfredobejarano.productlisting.SplashFragment"
              android:label="SplashFragment">
        <action android:id="@+id/action_splashFragment_to_postsFragment" app:destination="@id/postsFragment"/>
        <action android:id="@+id/action_splashFragment_to_loginFragment" app:destination="@id/loginFragment"/>
    </fragment>

</navigation>